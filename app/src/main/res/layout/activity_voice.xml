<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo"
    tools:context=".VoiceActivity">


    <Button
        android:id="@+id/btnStartRecord"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnShowSentences"
        android:layout_marginTop="47dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@drawable/rounded_button"
        android:text="@string/start_record" />

    <TextView
        android:id="@+id/textRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="@string/record_the_sentence_to_sign_up"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/popup"
        android:layout_width="240dp"
        android:layout_height="180dp"

        ></ImageView>

    <Button
        android:id="@+id/btnShowSentences"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRecord"
        android:layout_marginTop="47dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@drawable/rounded_button"
        android:text="@string/show_sentences" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>