<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceActivity">


    <TextView
        android:id="@+id/textRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="Record the sentence to sign up. " />

    <TextView
        android:id="@+id/subTextRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="'Be yourself, anyone else is already taken.'" />

    <Button
        android:id="@+id/btnStartRecord"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/subTextRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:background="@drawable/rounded_button"
        android:text="@string/start_record" />

    <Button
        android:id="@+id/btnSendRecord"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/subTextRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:background="@drawable/rounded_button"
        android:text="@string/send_records"
        android:visibility="invisible" />

</RelativeLayout>