<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InitActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="40dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/textView"
            android:layout_marginTop="20dp"
            android:hint="Insert name.." />

        <TextView
            android:text="PICTURE AREA"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/textPicture"/>

        <ImageView
            android:id="@+id/mimageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/textPicture"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_person_black_24dp"
            />


        <Button
            android:id="@+id/bottoneFoto"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/mimageView"
            android:layout_centerHorizontal="true"
            android:background="@color/design_default_color_primary"
            android:text="@string/take_a_photo"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:text="RECORD AREA"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottoneFoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/textRecord"/>

        <Button
            android:id="@+id/btnStartRecord"
            android:text="START RECORD"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textRecord"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnStopRecord"
            android:text="STOP RECORD"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnStartRecord"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/bottoneSalva"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_below="@id/btnStopRecord"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="Submit"
            android:onClick="send"
            android:textColor="@color/cardview_light_background" />



    </RelativeLayout>
</ScrollView>
