<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".InitActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/sign_up"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/textView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/insert_name"
            android:inputType="textPersonName"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:text="@string/save" />

        <TextView
            android:id="@+id/textPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonSave"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/take_a_picture_to_subscribe"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/mimageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/textPicture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/registration_photo"
            app:srcCompat="@drawable/male" />


        <Button
            android:id="@+id/bottoneFoto"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@id/mimageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:text="@string/take_a_photo" />

        <TextView
            android:id="@+id/textRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottoneFoto"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="@string/do_the_three_enrollments"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnStartRecord"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textRecord"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="@string/start_record" />

        <Button
            android:id="@+id/btnSendRecord"
            android:layout_width="200dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_below="@id/textRecord"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="@string/send_records" />





    </RelativeLayout>
</ScrollView>
